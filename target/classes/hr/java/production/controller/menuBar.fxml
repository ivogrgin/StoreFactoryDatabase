<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="hr.java.production.controller.MenuBarController">
    <MenuBar prefWidth="800.0">
        <menus>
            <Menu mnemonicParsing="false" text="Category">
                <items>
                    <MenuItem mnemonicParsing="false" onAction="#showCategorySearchScreen" text="Search" />
               <MenuItem mnemonicParsing="false" onAction="#showCategoryAddScreen" text="Add" />
                </items>
            </Menu>
            <Menu mnemonicParsing="false" text="Item">
                <items>
                    <MenuItem mnemonicParsing="false" onAction="#showItemSearchScreen" text="Search" />
               <MenuItem mnemonicParsing="false" onAction="#showItemAddScreen" text="Add" />
                </items>
            </Menu>
            <Menu mnemonicParsing="false" text="Factory">
                <items>
                    <MenuItem mnemonicParsing="false" onAction="#showFactoriesSearchScreen" text="Search" />
               <MenuItem mnemonicParsing="false" onAction="#showFactoryAddScreen" text="Add" />
                </items>
            </Menu>
            <Menu mnemonicParsing="false" text="Store">
                <items>
                    <MenuItem mnemonicParsing="false" onAction="#showStoresSearchScreen" text="Search" />
               <MenuItem mnemonicParsing="false" onAction="#showStoreAddScreen" text="Add" />
                </items>
            </Menu>
            <Menu mnemonicParsing="false" text="Client">
                <MenuItem mnemonicParsing="false" onAction="#showClientSearchScreen" text="Search" />
                <MenuItem mnemonicParsing="false" onAction="#showClientAddScreen" text="Add" />
            </Menu>
            <Menu mnemonicParsing="false" text="Transaction">
                <MenuItem mnemonicParsing="false" onAction="#showTransactionSearchScreen" text="Search" />
            </Menu>
        </menus>
        <opaqueInsets>
            <Insets />
        </opaqueInsets>
    </MenuBar>

</AnchorPane>
